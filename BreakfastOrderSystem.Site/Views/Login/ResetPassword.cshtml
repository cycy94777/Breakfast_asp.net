@using System.Web.Mvc.Html

@{
    ViewBag.Title = "ResetPassword";
    Layout = null;
}


@model BreakfastOrderSystem.Site.Models.ViewModels.ResetPasswordVm




<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>重置密碼</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: "Franklin Gothic Medium", "Arial Narrow", Arial, sans-serif;
            background-image: url(/Content/images/healthy-breakfast-table2.jpg);
            background-size: cover;
            background-position: center;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .reset-password-container {
            display: flex;
            justify-content: flex-start;
            align-items: center;
            height: 100px;
            width: 100%;
            padding-left: 65%;
        }

        h2 {
            padding-left:10px;
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin-bottom: 8px;
            color: #333;
            text-align: start;
        }

        input[type="password"] {
            width: 100%;
            padding: 10px;
            margin-bottom: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 16px;
            
        }

        button {
            width: 100%;
            padding: 10px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
        }

        button:hover {
            background-color: #45a049;
        }

        .error-message {
            color: red;
            text-align: center;
        }

        .validation-summary {
            color: red;
            margin-bottom: 10px;
        }

        .input-group {
            position: relative;
            margin-bottom: 10px;
            margin-top: 50px;
        }

        .input-group2 {
            position: relative;
            margin-bottom: 20px;
            margin-top: 20px;
        }

        .input-group input {
            width: 250px;
            padding: 10px;
            /*padding-left: 40px;*/
            border-radius: 8px;
            border: 0px solid #a9a9a9;
            font-size: 15px;
            background-color: #e8e8e8; /* 設置背景顏色 */
            color: #818181; /* 設置文字顏色 */
        }

        .input-group2 input {
            width: 250px;
            padding: 10px;
            /*padding-left: 40px;*/
            border-radius: 8px;
            border: 0px solid #a9a9a9;
            font-size: 15px;
            background-color: #e8e8e8; /* 設置背景顏色 */
            color: #4b4a4a; /* 設置文字顏色 */
        }

            .input-group input:focus,
            .input-group2 input:focus {
                border-color: #2cc767; /* 聚焦狀態下的邊框顏色 */
                box-shadow: 0 0 8px rgba(21, 184, 86, 0.5); /* 聚焦狀態下的陰影效果 */
                outline: none; /* 去掉默認的聚焦輪廓 */
            }

        .input-group label,
        .input-group2 label {
            padding-left: 10px;
            position: absolute;
            top: -30%;
            left: 4px;
            transform: translateY(-50%);
            font-size: 13px;
            color: #a9a9a9;
            pointer-events: none;
            transition: 0.2s ease all;
        }

        .reset-box {
            background-color: white;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.5); /* 增加了模糊半徑 */
            width: 300px;
            text-align: center;
        }

            .reset-box h2 {
                margin: 0 0 10px;
                color: #17ae59;
                text-align: left;
                font-size: 25px;
                font-weight: bolder;
            }

        .fredoka-custom {
            font-family: "Fredoka", sans-serif;
            font-weight: 500; /* 設置為粗體，如果需要其他粗細可以設置為 400, 500 等 */
            font-style: normal;
            font-optical-sizing: auto;
            font-variation-settings: "wdth";
            margin-bottom: 10px;
            font-size: 30px;
        }

        button {
            width: 90%;
            padding: 8px;
            border: none;
            border-radius: 20px;
            background: #38c75e;
            color: white;
            font-size: 20px;
            cursor: pointer;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="reset-password-container">
        <div class="reset-box">
            <h2 class="fredoka-custom">設定新密碼</h2>

            @using (Html.BeginForm("ResetPassword", "Login", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <input type="hidden" name="memberId" value="@ViewBag.MemberId" />

                if (!ViewData.ModelState.IsValid)
                {
                    <div class="validation-summary">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </div>
                }

                <div class="input-group">
                    <label for="newPassword">新密碼</label>
                    @Html.PasswordFor(m => m.Password, new { required = "required", id = "newPassword" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
                <div class="input-group2">
                    <label for="confirmPassword">確認密碼</label>
                    @Html.PasswordFor(m => m.ConfirmPassword, new { required = "required", id = "confirmPassword" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                </div>
                    <button type="submit">提交</button>
                

            }
        </div>
    </div>


</body>
</html>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
